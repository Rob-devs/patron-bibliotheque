               <ChoiceBox fx:id="cbEtatExemplaire" prefHeight="25.0" prefWidth="200.0" style="-fx-font-size: 14px; -fx-pref-width: 200px;">
                  <style>
                     -fx-background-color: #2C3E50; /* Couleur de fond */
                     -fx-control-inner-background: #2C3E50; /* Couleur intérieure du contrôle */
                     -fx-text-fill: #ECF0F1; /* Couleur du texte */
                  </style>
               </ChoiceBox>
               <HBox spacing="10" alignment="CENTER">
                  <Button fx:id="btnConfirm" mnemonicParsing="false" onAction="#confirmAdd" text="Confirmer" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#close" text="Annuler" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
               </HBox>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</VBox>
