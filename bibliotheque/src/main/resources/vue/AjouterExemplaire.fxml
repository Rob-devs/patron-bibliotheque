<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ul.miage.patron.controller.exemplaires.ControllerAddExemplaire">
   <children>
      <AnchorPane prefHeight="300.0" prefWidth="250.0" style="-fx-background-color: #34495E;">
         <children>
            <VBox alignment="CENTER" layoutX="25.0" layoutY="25.0" spacing="10">
               <Label text="Ajouter exemplaire" textFill="#ECF0F1">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
               <Label fx:id="lblTitre" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="200.0" text="Label" textFill="#ECF0F1" style="-fx-font-size: 14px;"/>
